<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-88dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Datos de empleado 1:"
                android:textColor="@color/white"
                android:textSize="50px"
                android:layout_marginBottom="20dp"/>

            <EditText
                android:id="@+id/edtnombres1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombres"
                android:inputType="@string/text"
                android:layout_marginBottom="10dp"/>
            <EditText
                android:id="@+id/edtapellidos1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Apellidos "
                android:inputType="text"
                android:layout_marginBottom="10dp"/>
            <EditText
                android:id="@+id/edtcargoempleado1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cargo "
                android:inputType="text"
                android:layout_marginBottom="10dp"/>
            <EditText
                android:id="@+id/edthorasmes1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Horas trabajadas en el mes"
                android:inputType="number"
                android:layout_marginBottom="30dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Datos de empleado 2:"
                android:textColor="@color/white"
                android:textFontWeight="10"
                android:textSize="50px"
                android:layout_marginBottom="20dp"/>

            <EditText
                android:id="@+id/edtnombres2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombres"
                android:inputType="text"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/edtapellidos2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Apellidos "
                android:inputType="text"
                android:layout_marginBottom="10dp"/>
            <EditText
                android:id="@+id/edtcargoempleado2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cargo "
                android:inputType="text"
                android:layout_marginBottom="10dp"/>
            <EditText
                android:id="@+id/edthorasmes2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Horas trabajadas en el mes"
                android:inputType="number"
                android:layout_marginBottom="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Datos de empleado 3:"
                android:textColor="@color/white"
                android:textFontWeight="10"
                android:textSize="50px"
                android:layout_marginBottom="20dp"/>

            <EditText
                android:id="@+id/edtnombres3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombres"
                android:inputType="text"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/edtapellidos3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Apellidos "
                android:inputType="text"
                android:layout_marginBottom="10dp"/>
            <EditText
                android:id="@+id/edtcargoempleado3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cargo "
                android:inputType="text"
                android:layout_marginBottom="10dp"/>
            <EditText
                android:id="@+id/edthorasmes3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Horas trabajadas en el mes"
                android:inputType="number"
                android:layout_marginBottom="30dp"/>

            <Button
                android:id="@+id/btncalcularsalarios"
                android:text="Calcular Salarios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>