<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="223dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Datos Empleado 1:"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="15dp"/>

            <EditText
                android:id="@+id/txtnombre1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Nombres:"
                android:layout_marginHorizontal="10dp"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/txtapellidos1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_marginHorizontal="10dp"
                android:hint="Apellidos:" />

            <EditText
                android:id="@+id/txtcargo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_marginHorizontal="10dp"
                android:hint="Cargo:" />

            <EditText
                android:id="@+id/nhoras1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:hint="Horas trabajadas en el mes:"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Datos empleado 2:"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="15dp"/>

            <EditText
                android:id="@+id/txtnombres2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_marginHorizontal="10dp"
                android:hint="Nombres:" />

            <EditText
                android:id="@+id/txtapellidos2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_marginHorizontal="10dp"
                android:hint="Apellidos:" />

            <EditText
                android:id="@+id/txtcargo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_marginHorizontal="10dp"
                android:hint="Cargo:" />

            <EditText
                android:id="@+id/nhoras2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:hint="Horas trabajadas en el mes:"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Datos empleado 3:"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="15dp"/>

            <EditText
                android:id="@+id/txtnombres3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_marginHorizontal="10dp"
                android:hint="Nombres:" />

            <EditText
                android:id="@+id/txtapellidos3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_marginHorizontal="10dp"
                android:hint="Apellidos:" />

            <EditText
                android:id="@+id/txtcargo3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_marginHorizontal="10dp"
                android:hint="Cargo:" />

            <EditText
                android:id="@+id/nhoras3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:hint="Horas trabajadas en el mes:"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="20dp"/>

            <Button
                android:id="@+id/btncalcular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calcular Sueldo" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>